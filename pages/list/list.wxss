/* pages/list/list.wxss */

.classify {
  display: flex;
  white-space: nowrap;
  background: #fff;
  height: 80rpx;
  border-bottom: 1px #eee solid;
}

.classify view{
  margin-top: 15rpx;
  margin-left: 10rpx;
  height: 50rpx;
  display: inline-block;
  line-height: 50rpx;
  font-size: 30rpx;
  padding: 0 10rpx;
}
.active {
  color: #ff6347;
  /* border: 2rpx solid #ff6347; */
  /* border-radius: 25rpx; */
}

.bookList {
  background: #fff;
  position: relative;
  width: 100%;
}

.book_item {
  border-bottom: 1px #eee solid;
  position: relative;
  height: 335rpx;
  margin-left: 30rpx;
}

.book_item image {
  width: 190rpx;
  height: 275rpx;
  position: absolute;
  left: 0;
  top: 30rpx;
  box-shadow: 0 2px 5px 0 #888;

}

.book_info {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  width: 475rpx;
}

.book_title {
  color: #333;
  font-size: 15px;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.book_site,.book_desc {
  color: #999;
  font-size: 12px;
  line-height: 40rpx;
  display: block;
   margin-bottom: 10rpx;
}

.book_desc {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.book_follower {
  font-size: 12px;
  line-height: 40rpx;
  color: #ff6347;
}
