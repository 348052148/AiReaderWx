/* pages/list/list.wxss */


.bookList {
  background: #fff;
  position: relative;
  width: 100%;
}

.book_item {
  border-bottom: 1px #eee solid;
  position: relative;
  height: 335rpx;
  margin-left: 30rpx;
}

.book_item image {
  width: 190rpx;
  height: 275rpx;
  position: absolute;
  left: 0;
  top: 30rpx;
  box-shadow: 0 2px 5px 0 #888;

}

.book_info {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  width: 475rpx;
}

.book_title {
  color: #333;
  font-size: 15px;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.book_site,.book_desc {
  color: #999;
  font-size: 12px;
  line-height: 40rpx;
  display: block;
   margin-bottom: 10rpx;
}

.book_desc {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.book_follower {
  font-size: 12px;
  line-height: 40rpx;
  color: #ff6347;
}
