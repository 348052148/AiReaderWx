/* pages/catalogs/catalogs.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.chapterContainer {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
  background: #fff;
}

.chapter_topic {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  width: 95%;
  margin: 30rpx 30rpx 0 30rpx;
  display: flex;
  direction: row;
  justify-content: space-between;
}

.chapter_topic_hide {
  color: #fff;
  width: 11%;
  background: #ec304c;
  border-radius: 30rpx 0 0 30rpx;
  font-size: 13px;
  font-weight: normal;
  text-align: center;
  line-height: 50rpx;
}

.chapter_item {
  font-size: 14px;
  color: #666;
  width: 95%;
  margin-left: 30rpx;
  border-bottom: 1px #eee solid;
  line-height: 75rpx;
  height: 75rpx;
}
