/* pages/home/home.wxss */

.searchfix {
  width: 100%;
  height: 85rpx;
}

.search {
  position: fixed;
  z-index: 200;
  width: 100%;

}
.searchContainer {
  padding-top: 3rpx;
  position: relative;
}

.searchIcon {
  position: absolute;
  top: 30rpx;
  left: 35rpx;
  z-index: 20;
}

.searchContainer input {
  background: #efefef;
  text-indent: 50px;
  color: #333;
  font-size: 18px;
  height: 80rpx;
  line-height: 80rpx;
  outline: none;
  border-radius: 35rpx;
  width: 98%;
  margin: 0 auto;
}

.placerStyle {
  color: #999;
  font: 14px;
}

/*导航*/
.bannar{
  background: #fff;
}
.slide-image {
  display: inline;
}

/*热门容器*/
.hotContainer {
  display: block;
  margin-top: 0rpx;
  background: #fff;

}
.hotContainer .hotHead {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
}
.hotContainer .hotHead .hotTitle {
  margin-left: 2rpx;
  text-indent: 20rpx;
  font-weight: bold;
  float: left;
}
.hotContainer .hotHead .hotMore {
  padding-right: 20rpx;
  color: #cb1c36;
  font-size: 32rpx;
  font-family:fantasy;
  float: right;
}

/*书籍容器*/
.hotContainer .bookContainer {
  display: block;
  /* justify-content: center; */
  /* text-align: center; */

}
/*书籍样式*/
.hotContainer .bookBox {
  display: inline-block;
  width: 190rpx;
  padding: 18rpx;
  vertical-align: top;
  margin-left: 20rpx
}

.hotContainer .bookBox image {
  width: 190rpx;
  height: 275rpx;
  box-shadow: 0 2px 5px 0 #888;

}
.hotContainer .bookBox text {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


.bookList {
  background: #fff;
  position: relative;
  width: 100%;
}

.book_item {
  border-bottom: 1px #eee solid;
  position: relative;
  height: 335rpx;
  margin-left: 30rpx;
}

.book_item image {
  width: 190rpx;
  height: 275rpx;
  position: absolute;
  left: 0;
  top: 30rpx;
  box-shadow: 0 2px 5px 0 #888;

}

.book_info {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  width: 475rpx;
}

.book_title {
  color: #333;
  font-size: 15px;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.book_site,.book_desc {
  color: #999;
  font-size: 12px;
  line-height: 40rpx;
  display: block;
   margin-bottom: 10rpx;
}

.book_desc {
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.book_follower {
  font-size: 12px;
  line-height: 40rpx;
  color: #ff6347;
}
